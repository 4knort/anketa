.text-input
	display flex
	align-items flex-start
	&__label
		font-size 23px
		line-height 49px
		font-weight bold
		color brown-text
		margin-right 13px
		padding-top 14px
		&--date
			margin-right 0
	&__field
		padding 10px
		padding-left 15px
		flex-grow 1
		background url('../images/input-text-border.png') repeat-x -7px 46px
		&--date
			max-width 210px
			background url("../images/input-text-border.png") no-repeat 11px 43px

@media (max-width mobile)
	.text-input
		flex-direction column
		align-items center
		&__field
			min-width 320px
			&--date
				text-align center
